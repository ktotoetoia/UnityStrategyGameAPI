.nameLabel {
    font-size: 30px;
    -unity-font-style: bold;
    margin-top: 3px;
    margin-right: 5px;
    margin-bottom: 5px;
    margin-left: 5px;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
}

.middleScreenContainer {
    flex-grow: 2;
    flex-shrink: 0;
}

.bottomContainer {
    flex-grow: 1;
    flex-shrink: 1;
    flex-direction: row;
}

.bottomContainerEmpty {
    flex-grow: 2;
    flex-shrink: 0;
}

.infoContainer {
    flex-grow: 1;
    background-color: rgb(69, 75, 74);
    flex-shrink: 1;
}
